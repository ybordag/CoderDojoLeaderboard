<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
 
    <Button
        android:id="@+id/mainLeaderBoardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:onClick="onClickLeaderBoard"
        android:text="@string/mainLeaderBoardButton" />

    <Button
        android:id="@+id/mainLightningRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLeaderBoardButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="onClickLightningRound"
        android:text="@string/mainLightningRoundButton" />


</RelativeLayout>
